// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CUSTOMER
  SUPPLIER
  DELIVERY
  ADMIN
}

enum OrderStatus {
  PENDING
  ACCEPTED
  SHIPPED
  DELIVERED
  CANCELLED
  REJECTED
}

enum DeliveryStatus {
  SEARCHING
  ASSIGNED
  PICKED_UP
  IN_TRANSIT
  COMPLETED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed
  name      String
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fcmToken  String?  // Firebase Cloud Messaging Token

  // Relations
  profile         Profile?
  products        Product[]      @relation("SupplierProducts")
  ordersPlaced    Order[]        @relation("CustomerOrders")
  ordersReceived  Order[]        @relation("SupplierOrders")
  deliveries      Delivery[]     @relation("PartnerDeliveries")
  eventLogs       EventLog[]

  @@map("users")
}

model Profile {
  id          String  @id @default(uuid())
  userId      String  @unique
  user        User    @relation(fields: [userId], references: [id])
  phone       String?
  address     String?
  city        String?
  vehicleInfo String? // For Delivery Partners
  businessName String? // For Suppliers
  
  @@map("profiles")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String
  stock       Int      @default(0)
  supplierId  String
  supplier    User     @relation("SupplierProducts", fields: [supplierId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems  OrderItem[]

  @@map("products")
}

model Order {
  id          String      @id @default(uuid())
  customerId  String
  customer    User        @relation("CustomerOrders", fields: [customerId], references: [id])
  supplierId  String
  supplier    User        @relation("SupplierOrders", fields: [supplierId], references: [id])
  totalAmount Decimal     @db.Decimal(10, 2)
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  items       OrderItem[]
  delivery    Delivery?

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Price at time of purchase

  @@map("order_items")
}

model Delivery {
  id              String         @id @default(uuid())
  orderId         String         @unique
  order           Order          @relation(fields: [orderId], references: [id])
  partnerId       String?
  partner         User?          @relation("PartnerDeliveries", fields: [partnerId], references: [id])
  status          DeliveryStatus @default(SEARCHING)
  pickupAddress   String
  dropoffAddress  String
  distanceKm      Float?
  deliveryFee     Decimal?       @db.Decimal(10, 2)
  startedAt       DateTime?
  completedAt     DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("deliveries")
}

// Telemetry / Data Driven Core
model EventLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  eventType String   // e.g. "LOGIN", "ORDER_CREATED", "PAGE_VIEW"
  metadata  Json?    // Flexible JSON payload for event details
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([eventType])
  @@index([userId])
  @@map("event_logs")
}
